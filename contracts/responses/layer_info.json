{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "layer_info.json",
  "title": "LayerInfo Response",
  "description": "Information about a Rhino layer",
  "type": "object",
  "properties": {
    "id": {
      "$ref": "../common/definitions.json#/$defs/guid",
      "description": "Layer GUID"
    },
    "name": {
      "type": "string",
      "description": "Layer name"
    },
    "color": {
      "$ref": "../common/definitions.json#/$defs/colorObject",
      "description": "Layer color"
    },
    "parent": {
      "$ref": "../common/definitions.json#/$defs/guid",
      "description": "Parent layer GUID"
    },
    "visible": {
      "type": "boolean",
      "description": "Layer visibility"
    },
    "locked": {
      "type": "boolean",
      "description": "Layer locked state"
    }
  },
  "required": ["id", "name", "color"]
}
